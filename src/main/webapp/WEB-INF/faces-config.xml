<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

		<!-- <message-bundle>resources.application</message-bundle> -->
		<!-- <locale-config> -->
		<!-- <default-locale>es</default-locale> -->
		<!-- <supported-locale>en</supported-locale> -->
		<!-- </locale-config> -->

		<resource-bundle>
			<base-name>ar.edu.unju.fi.soo.messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<navigation-rule>
		<navigation-case>
			<from-outcome>welcome</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- CLIENT -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>client_index</from-outcome>
			<to-view-id>/modulos/client/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- PLAN -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>plan_index</from-outcome>
			<to-view-id>/modulos/plan/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- VEHICLE -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>vehicle_index</from-outcome>
			<to-view-id>/modulos/vehicle/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
